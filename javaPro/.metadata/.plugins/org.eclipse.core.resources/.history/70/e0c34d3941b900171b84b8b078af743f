<script type="text/javascript">
$("#getBtn").click(function(){
	$.ajax({
		url:"/htmlGuiSimple/rest/hello/getSayHello",
		type:"GET",
		async : false,
		cache : false,
		success:function(resultData, textStatus){
			alert(result);
		},
		error:function(){
			alert("add category failed!");
		}
	});
});
$("#postBtn").click(function(){
	var paramter = {};
	paramter="{'name':}'" + $("#postParamVal").val()+"'";
	$.ajax({
		url:"/htmlGuiSimple/rest/hello/postSayHello",
		type:"POST",
		async : false,
		cache : false,
		contentType:"application/json;charset=utf-8",
		success:function(resultData, textStatus){
			$("postText").val(resultData);
		}
	});
});
$("#putBtn").click(function(){
	var paramter = {};
	paramter="{'name':}'" + $("#putParamVal").val()+"'";
	$.ajax({
		url:"/htmlGuiSimple/rest/hello/putSayHello",
		type:"PUT",
		async : false,
		cache : false,
		contentType:"application/json;charset=utf-8",
		success:function(resultData, textStatus){
			$("postText").val(resultData);
		}
	});
});
</script>
